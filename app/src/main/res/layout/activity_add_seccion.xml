<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSeccionActivity"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:elevation="12dp"
        android:padding="14dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_addSeccionHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imgBtn_SeccionHombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hombre"
                />

            <ImageButton
                android:id="@+id/imgBtn_SeccionMujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mujer"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:padding="14dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_addTallaHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <EditText
            android:id="@+id/et_Marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_PrecioVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio de venta"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_PrecioCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio de compra"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_CantInventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad en Inventario"
            android:textSize="20sp"/>

    </LinearLayout>



</LinearLayout>